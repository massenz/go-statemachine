set -eu
workdir=$(dirname $0)


version=$(grep -E '^[[:blank:]]*version' ${workdir}/build.settings |\
    sed -E 's/^[[:blank:]]*version[[:blank:]]*=?[[:blank:]]*//' |\
    sed "s/'//g" | sed 's/[[:blank:]]*$//')

echo "v${version}-g$(git rev-parse --short HEAD)"
